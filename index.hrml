    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const totalDebt = 5500; // Bs 5000 capital + Bs 500 interes
            const termMonths = 12;
            const monthlyPaymentRounded = 458; // Bs 458 por 11 meses

            const tableBody = document.querySelector('#payment-schedule-table tbody');

            let remainingDebt = totalDebt;

            // Fecha de inicio: Hoy (8 de noviembre de 2025)
            const today = new Date('2025-11-08'); 
            const paymentDay = today.getDate(); // D铆a 8

            // Funci贸n para formatear fechas (ej: "8 de Diciembre de 2025")
            const formatDate = (date) => {
                return date.toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' });
            };

            // Funci贸n para formatear dinero (Bs 5.000)
            const formatMoney = (amount) => {
                // Usamos toLocaleString para manejar los separadores de miles y el formato. Redondeamos a cero decimales.
                return parseFloat(amount).toFixed(0).toLocaleString('es-ES').replace(/\B(?=(\d{3})+(?!\d))/g, ".") + ' Bs';
            };


            // Fila inicial de Pr茅stamo
            const initialRow = tableBody.insertRow();
            initialRow.classList.add('bg-gray-50', 'font-bold');
            initialRow.innerHTML = `
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">Inicial</td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">${formatDate(today)}</td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">--</td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">${formatMoney(totalDebt)}</td>
            `;

            for (let i = 1; i <= termMonths; i++) {
                const row = tableBody.insertRow();
                
                // Calcular la fecha de pago
                const paymentDate = new Date(today);
                paymentDate.setMonth(today.getMonth() + i);
                
                // Asegurar que el d铆a sea el mismo (8)
                if (paymentDate.getDate() !== paymentDay) {
                    paymentDate.setDate(0); 
                    paymentDate.setDate(paymentDay);
                }

                let currentPayment;
                if (i <= termMonths - 1) {
                    // Primeros 11 pagos redondeados
                    currentPayment = monthlyPaymentRounded;
                } else {
                    // La 煤ltima cuota ajusta el saldo restante. Usamos Math.ceil para asegurar que cubra el saldo.
                    currentPayment = Math.ceil(remainingDebt); 
                }

                remainingDebt -= currentPayment;

                // Asegurarse de que el saldo no sea negativo al final
                const displayedRemainingDebt = Math.max(0, remainingDebt);

                row.innerHTML = `
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">${i}</td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">${formatDate(paymentDate)}</td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-semibold text-gray-800">${formatMoney(currentPayment)}</td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-600">${formatMoney(displayedRemainingDebt)}</td>
                `;
            }

            // Aplicar animaci贸n a las secciones
            document.querySelectorAll('.animate-fade-in').forEach((el, index) => {
                el.style.animationDelay = `${index * 0.2}s`;
            });
